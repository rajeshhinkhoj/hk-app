<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

 

    <style name="MyCustomTheme" parent="Theme.AppCompat">
         <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_light</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
         <item name="android:actionOverflowButtonStyle">@style/Widget.AppCompat.Light.Base.ActionButton.Overflow</item>
          <!-- Support library compatibility -->
           <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_light</item>
         <item name="actionBarStyle">@style/MyActionBar</item>
         <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.Light.Base.ActionButton.Overflow</item>
    </style>
    
    <!-- general styles for the action bar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
            <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_holo_light</item>
       
        <!-- Support library compatibility -->

        <item name="background">@color/action_bar_background</item>
      <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
        </style>
    <style name="MyPager">
       <item name="android:textColor">#ffffff</item>
       <item name="android:textSize">@dimen/tab_text_size</item>
      <item name="android:textStyle">bold</item>
    </style>
</resources>